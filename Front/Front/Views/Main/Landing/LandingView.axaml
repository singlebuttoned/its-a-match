<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Front.ViewModels"
             xmlns:landing="clr-namespace:Front.Views.Main.Landing"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Front.Views.Main.Landing.LandingView">
    <Design.DataContext>
        <viewModels:LandingViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*,3*,*" RowDefinitions="*,*,*,*" >
        <landing:BannerView 
            Grid.Row="0" 
            Grid.ColumnSpan="3" 
            HorizontalAlignment="Stretch" 
            Height="{DynamicResource SizeConstant10}"/>
        <landing:AdvantagesCardsView 
            Grid.Row="1" 
            Grid.Column="1" 
            VerticalAlignment="Stretch"
            Height="{DynamicResource SizeConstant8}"/>
        <Button 
            Grid.Row="2" 
            Grid.Column="1" 
            Content="2" 
            Background="Red" 
            HorizontalAlignment="Center"/>
        <Button
            Grid.Row="3" 
            Grid.Column="1" 
            Content="3" 
            Background="Red" 
            HorizontalAlignment="Center"/>
    </Grid>
</UserControl>